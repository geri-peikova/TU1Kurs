#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
#include<Windows.h>

int main() {
	int a = 3, b = 5, s = 0, p = 1, *p1;

	s = sum(a, b, &p1);
	printf("\nsumata e =%d", s);
	printf("\nproizvedenie e =%d", p);
	system("pause");
	return 0;
}

int sum(int a1, int b1, int *p1) {
	int s1;
	s1 = a1 + b1;
	*p1 = a1 * b1;
	return s1;
}
